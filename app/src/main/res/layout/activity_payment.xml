<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="#ffffff">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.hopop.hopopv10.activities.PaymentActivty">

            <TableLayout
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/tableLayout">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textView_justme"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:text="Just Me"
                        android:background="@drawable/cell_shape"
                        android:textSize="15dp"
                        android:paddingTop="14dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/textView_justme1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:textAlignment="center"
                        android:paddingLeft="3dp"
                        android:background="@drawable/cell_shape"
                        android:textSize="15dp"
                        android:paddingTop="14dp"
                        android:textColor="#ffffff"
                        android:text="+1"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textView_justme2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:textAlignment="center"
                        android:paddingLeft="3dp"
                        android:background="@drawable/cell_shape"
                        android:textSize="15dp"
                        android:paddingTop="14dp"
                        android:textColor="#ffffff"
                        android:text="+2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_justme3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:textAlignment="center"
                        android:text="+3"
                        android:textSize="15dp"
                        android:paddingTop="14dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="@drawable/cell_shape" />

                </TableRow>


            </TableLayout>
            <View style="@style/Divider"
                android:id="@+id/divider1"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tableLayout"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TableLayout
                android:id="@+id/tableLayout01"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/divider1">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Seats"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:id="@+id/textView_Seats"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/textView_Balance"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:text="My Wallet Balance"
                        android:textSize="20dp"
                        android:textStyle="normal" />

                </TableRow>
                <TableRow>


                    <TextView
                        android:id="@+id/textView_NumofSeats"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:text="01"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textView_BalanceAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:text="500Rs"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:textStyle="bold" />


                </TableRow>

            </TableLayout>
            <View style="@style/Divider"
                android:id="@+id/divider2"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tableLayout01"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TableLayout
                android:id="@+id/tableLayout02"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/divider2">
                <TableRow>
                    <TextView
                        android:id="@+id/textView_rideshare"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:text="Ride Fare"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="20dp"
                        android:textStyle="normal" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/textView_rideshareCalc"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:text="1X30"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_rideshareAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:text="30Rs"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:textStyle="bold" />


                </TableRow>
            </TableLayout>
            <View style="@style/Divider"
                android:id="@+id/divider3"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tableLayout02"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/button_Pay"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_below="@+id/divider3"
                android:background="@drawable/mybtn"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:text="PAY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Having Co-Passenger?"
                android:textStyle="normal"
                android:textSize="20dp"
                android:id="@+id/textView2"
                android:paddingLeft="70dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>